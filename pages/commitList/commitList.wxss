/* pages/iBought/iBought.wxss */
.remind-box {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-bottom: 300rpx;
}

.remind-img {
    width: 250rpx;
    height: 250rpx;
    padding-bottom: 25rpx;
}
page{
    min-height: 100%;
  background-color: #F2f2f2;
}
.container{
    justify-content:initial;
    background-color: #F2f2f2;
}
.title-box{
    width: 100%;
    padding-top: 330rpx;
    text-align: center;
    font-size:28rpx;
    color:#999;
    background: url(https://cdn.it120.cc/images/weappshop/icon-cart.png) no-repeat center 205rpx;
    background-size: 100rpx auto;
    margin-bottom: 50rpx; 
}
.to-index-btn{
    color:#fff;
    background:#e64340;
    border-radius:6px;
    width:300rpx;
    height:70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size:28rpx;
    margin: auto;
}
.list-top{
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    box-sizing: border-box;
    display: flex;
    justify-content:space-between;
    padding: 0 30rpx;
    font-size: 28rpx;
    align-items: center;
    background-color: #F2f2f2;
}
.list-top .label{
    color: #6a005f;
}
.list-top .edit-btn{
    color: #999;
    height: 100%;
}
.goodsList{
    width: 100%;
    background-color: #fff;
    padding-top: 20rpx;
     padding-bottom: 50rpx; 
}
.a-gooods{
    width: 100%;
    overflow: auto;
    padding-top: 20rpx;
    border-bottom: 1px solid #eee;

}
.a-goods-conts{
    display: flex;
    justify-content:space-between;
    padding-left: 30rpx;
    width: 870rpx;
    box-sizing: border-box;
    transition: margin-left 0.2s ease-in-out;
    background: url(https://cdn.it120.cc/images/weappshop/gou.png) no-repeat 30rpx center;
    background-size: 40rpx auto; 
}
.a-goods-conts.active{
    background: url(https://cdn.it120.cc/images/weappshop/gou-red.png) no-repeat 30rpx center;
    background-size: 40rpx auto; 
}
.goods-info{
    
    display: flex;
    justify-content:space-between;
    padding: 80rpx 0 30rpx 70rpx; 
    width: 720rpx;
    min-height: 160rpx;
    box-sizing: border-box;
}
.goods-info .img-box{
    width: 160rpx;
    height:260rpx; 
    overflow: auto;
    margin-right: 20rpx;
    background-color: #ffffff;
}
.goods-info .text-box{
    width: 440rpx;
    margin-top: -15rpx;
    position: relative;
}
.goods-info .text-box .goods-title{
    font-size: 28rpx;
    color:#000;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: auto;
    padding: 10rpx 20rpx 5rpx 0;
    text-align: left;
}
.goods-info .text-box .goods-label{
    font-size: 21rpx;
    color:#999;
    height: 30rpx;
    line-height: 38rpx;
    margin: 8rpx 0 25rpx 0;
    text-align: left;
}
.goods-info .text-box .goods-price{
    font-size: 26rpx;
    color:#e64340;
    text-align: left;
}

.goods-info .img-box .img{
    width: 160rpx;
    height:160rpx;
}

.a-goods-conts .delete-btn{
    width: 120rpx;
    line-height: 220rpx;
    text-align: center;
    background:#e64340;
    font-size: 24rpx;
    color: #fff;
}
.commit-time{
  position: absolute;
  left: 30rpx; 
  margin-top:30rpx;
  font-size: 30rpx;
}
.commit-box{
  position: absolute;
  left: 80rpx; 
  margin-top:200rpx;
  font-size: 30rpx;
}

.swiper-tab {
  line-height: 80rpx;
  border: 1px solid #ccc;
  display: flex; 
  justify-content: space-around;
  align-items: center;
}

.swiper-tab-list {
  font-size: 30rpx;
  color: #777;
  text-align: center;
}

.active {
  color: #6A005F;
  border-bottom: 5rpx solid #6A005F;
}

.swiper-box {
  display: block;
  /* height: 100vh; */
  width: 100%;
  overflow: auto;
}